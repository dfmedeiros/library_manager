<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class =>  'form-signin'}) do |f| %>

  <%= f.email_field :email, :autofocus => true, :placeholder => t('employee.email') %>

  <%= f.password_field :password, :placeholder => t('employee.password') %>

  <%= f.label :remember_me, :class => 'checkbox' do %>
    <%= f.check_box :remember_me %>
    <%= t('employee.remember_me') %>
  <% end %>
  
  
  <%= f.submit t('shared.sign_in'), :class => 'btn btn-large btn-primary pull-right' %>
    
  <div class="clear"></div>
<% end %>
